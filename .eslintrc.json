{
  "parser": "babel-eslint",
  "extends": [
    "prettier",
    "prettier/flowtype",
    "prettier/react",
    "standard"
  ],
  "plugins": [
    "flowtype",
    "react",
    "prettier",
    "emotion"
  ],
  "rules": {
    "no-var": "error",
    "prefer-const": ["error"],
    "prefer-arrow-callback": ["error"],
    "semi": [0],
    "max-len": [1, {
      "code": 120
    }],
    "no-undef": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "space-before-function-paren": ["error", "never"],
    "no-console": ["error"],
    "no-debugger": ["error"]
  }
}
