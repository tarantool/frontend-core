{
  "parser": "babel-eslint",
  "extends": [
    "prettier",
    "prettier/flowtype",
    "prettier/react",
    "fbjs"
  ],
  "plugins": [
    "flowtype",
    "react",
    "prettier",
    "emotion"
  ],
  "rules": {
    "no-var": "error",
    "prefer-const": ["error"],
    "prefer-arrow-callback": ["error"],
    "semi": [0],
    "max-len": [1, {
      "code": 120
    }],
    "no-undef": 0
  }
}
